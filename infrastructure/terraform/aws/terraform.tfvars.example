# =============================================================================
# ShieldOps — Terraform Variable Values (Example)
# Copy this file to terraform.tfvars and fill in your values.
# NEVER commit terraform.tfvars — it may contain sensitive ARNs.
# =============================================================================

# -- General ------------------------------------------------------------------
aws_region   = "us-east-1"
environment  = "production"   # production | staging | development
project_name = "shieldops"

# -- Networking ---------------------------------------------------------------
vpc_cidr = "10.0.0.0/16"

# -- ECS / Application -------------------------------------------------------
app_cpu           = 512        # CPU units (512 = 0.5 vCPU, 1024 = 1 vCPU)
app_memory        = 1024       # Memory in MiB
app_desired_count = 2          # Number of Fargate tasks
container_image   = "123456789012.dkr.ecr.us-east-1.amazonaws.com/shieldops-production:latest"

# -- RDS (PostgreSQL) --------------------------------------------------------
db_instance_class    = "db.t3.medium"
db_allocated_storage = 50      # GB

# -- ElastiCache (Redis) -----------------------------------------------------
redis_node_type = "cache.t3.medium"

# -- TLS / Domain (optional) -------------------------------------------------
domain_name     = ""           # e.g. "api.shieldops.io"
certificate_arn = ""           # ACM certificate ARN for HTTPS

# -- Secrets ------------------------------------------------------------------
# ARN of the Secrets Manager secret containing app keys:
#   ANTHROPIC_API_KEY, JWT_SECRET, OPENAI_API_KEY, LANGSMITH_API_KEY
secrets_arn = "arn:aws:secretsmanager:us-east-1:123456789012:secret:shieldops/production/app-secrets-AbCdEf"
